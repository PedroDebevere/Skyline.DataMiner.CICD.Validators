<Protocol xmlns="http://www.skyline.be/validatorProtocolUnitTest">
    <Triggers>
        
        <!--Valid on parameter combinations-->
        <Trigger id="1">
            <Name>Parameter Change</Name>
            <On>parameter</On>
            <Time>change</Time>
        </Trigger>
        <Trigger id="2">
            <Name>Parameter Change After Response</Name>
            <On>parameter</On>
            <Time>change after response</Time>
        </Trigger>
        <Trigger id="3">
            <Name>Parameter Timeout</Name>
            <On>parameter</On>
            <Time>timeout</Time>
        </Trigger>
        <Trigger id="4">
            <Name>Parameter Timeout After Retries</Name>
            <On>parameter</On>
            <Time>timeout after retries</Time>
        </Trigger>
        
        <!--Valid on command combinations-->
        <Trigger id="100">
            <Name>Command Before</Name>
            <On>command</On>
            <Time>before</Time>
        </Trigger>
        <Trigger id="101">
            <Name>Command After</Name>
            <On>command</On>
            <Time>after</Time>
        </Trigger>
        
        <!--Valid on response combinations-->
        <Trigger id="200">
            <Name>Response Before</Name>
            <On>response</On>
            <Time>before</Time>
        </Trigger>
        <Trigger id="201">
            <Name>Response After</Name>
            <On>response</On>
            <Time>after</Time>
        </Trigger>
        
        <!--Valid on pair combinations-->
        <Trigger id="300">
            <Name>Pair Succeeded</Name>
            <On>pair</On>
            <Time>succeeded</Time>
        </Trigger>
        <Trigger id="301">
            <Name>Pair Timeout</Name>
            <On>pair</On>
            <Time>timeout</Time>
        </Trigger>
        <Trigger id="302">
            <Name>Pair Timeout After Retries</Name>
            <On>pair</On>
            <Time>timeout after retries</Time>
        </Trigger>
        
        <!--Valid on group combinations-->
        <Trigger id="400">
            <Name>Group Before</Name>
            <On>group</On>
            <Time>before</Time>
        </Trigger>
        <Trigger id="401">
            <Name>Group After</Name>
            <On>group</On>
            <Time>after</Time>
        </Trigger>
        
        <!--Valid on session combinations-->
        <Trigger id="500">
            <Name>Session Timeout</Name>
            <On>session</On>
            <Time>timeout</Time>
        </Trigger>
        
        <!--Valid on timer combinations-->
        <Trigger id="600">
            <Name>Timer Before</Name>
            <On>timer</On>
            <Time>before</Time>
        </Trigger>
        
        <!--Valid on protocol combinations-->
        <Trigger id="700">
            <Name>Protocol After Startup</Name>
            <On>protocol</On>
            <Time>after startup</Time>
        </Trigger>
        <Trigger id="701">
            <Name>Protocol Link File Change</Name>
            <On>protocol</On>
            <Time>link file change</Time>
        </Trigger>
        
        <!--Valid no on and time tag (triggered from other trigger or QAction)-->
        <Trigger id="800">
            <Name>CheckTrigger</Name>
        </Trigger>
    </Triggers>
</Protocol>